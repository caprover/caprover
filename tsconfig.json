{
    "compilerOptions": {
        "module": "Node16",
        "moduleResolution": "Node16",
        "strictNullChecks": true,
        "outDir": "./built",
        "noImplicitAny": true,
        "sourceMap": true,
        "allowJs": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "target": "ES2018"
    },
    "include": ["./src/**/*"]
}
